{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "blockBindings": true,
    "jsx": true
  },
  "rules": {
    // Strict mode
    "strict": [0, "function"],

    // Code style
    //"indent": [4, 4],
    "quotes": [0, "single"],

    "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
    "no-use-before-define": [0],
    "no-extra-semi": [1],
    "semi": [0],
    "no-multi-spaces": [1],
    "curly": [1],
    "no-undef": [1],
    "comma-spacing": [1],
    "comma-dangle": [2],
    "no-underscore-dangle": [0],
    "new-cap": [0],
    "no-unreachable": [1],
    "camelcase": [0]
  }
}
